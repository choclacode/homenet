<%- include('../partials/head.ejs') %>
  <script src="/script.js"></script>
  <script>window.addEventListener('load', () => articles().edit())</script>
<%- include('../partials/header.ejs') %>

  <section><% const bodyplaceholder = `<p>The hereafter, the ever eternal place of living after death.</p><p>Every person has to suffer death, and after death, they will enter the hereafter. ...</p>`; %>
    <h1>Edit Article</h1>
    <p>Edit your article</p>
    <form class="article">
      <input type="text" name="title" placeholder="Title" value="<%- article.title %>">
      <p class="title-err error"></p>
      <textarea name="body" cols="30" rows="10" placeholder="Body"><%- article.body %></textarea>
      <p class="body-err error"></p>
      <input type="submit" value="Edit">
    </form>
    <div class="preview">
      <h1 class="title"><%- article.title %></h1>
      <article><%- article.body %></article>
    </div>
  </section>

<%- include('../partials/footer.ejs') %>