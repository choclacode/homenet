<%- include('../partials/head.ejs') %><% if (user && user.id == article.author.id) { %>
  <script defer src="/script.js"></script>
  <script>window.addEventListener('load', () => articles()._delete())</script><% } %>
<%- include('../partials/header.ejs') %>

  <section class="article details">
    <h1 class="title"><%- article.title %></h1>
    <article><%- article.body %></article>
    <p>Author: <span class="author title"><%- article.author.name %></span></p>
    <p>Created at: <%- article.createdAt.date %></p> <br/><br/><br/><% if (user && user.id == article.author.id) { %>
    <ul>
      <li><a href="/articles/edit/<%- article.slug %>" class="btn">Edit</a></li>
      <li><a class="btn delete" data-doc="<%= article.slug %>" style="cursor: pointer;">Delete</a></li>
    </ul><% } %>
    <p><a href="/articles" class="btn">Back</a></p>
  </section>

<%- include('../partials/footer.ejs') %>