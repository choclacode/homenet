extends ../layout.pug

block title
  | #{info.eng} &laquo; #{info.ara}

block link
  link(rel="stylesheet", href="/styles/quran.css")

block content
  section.surah
    h1.title
      | info.eng
      br
      | info.ara
    ul
      if !(info.num == 1 || info.num == 9)
        li#bismillah
          span.ara بِسْمِ اللَّهِ الرَّحْمَنِ الرَّحِيمِ
      for ayah in surah
        li(id=ayah.num)
          .num= ayah.num
          .ara= ayah.ara
          .num English - Saheeh International
          .eng= ayah.eng
          .num Bengali - Mohiuddin Khan
          .ban= ayah.ban
