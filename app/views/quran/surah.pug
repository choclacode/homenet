extends ../layout.pug

block title
  | #{info.eng} &laquo; #{info.ara}

block content
  section.surah
    h1.title
      = info.eng
      br
      = info.ara
    ul
      if info.bismillah
        li#bismillah
          span.ara بِسْمِ اللَّهِ الرَّحْمَنِ الرَّحِيمِ
      for ayah in surah
        li(id=ayah.num)
          .num= ayah.num
          .ara= ayah.ara
          .num= info.translations.eng
          .eng= ayah.eng
          .num= info.translations.ban
          .ban= ayah.ban
